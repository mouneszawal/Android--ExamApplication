<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddQuestionActivity"
    >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        tools:context=".AddQuestionActivity"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Type your question:"
                android:textColor="#02475e"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/questionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_below="@+id/textView"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option A :"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="#02475e"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/optionA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView2"
                android:layout_marginStart="20dp"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option B :"
                android:layout_below="@+id/optionA"
                android:layout_margin="8dp"
                android:textColor="#02475e"
                android:textSize="8pt" />
            <EditText
                android:id="@+id/optionB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView3"
                android:layout_below="@id/optionA"
                android:layout_marginStart="20dp"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option C :"
                android:layout_below="@+id/optionB"
                android:layout_margin="8dp"
                android:textColor="#02475e"
                android:textSize="8pt" />

            <EditText
                android:id="@+id/optionC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView4"
                android:layout_below="@id/optionB"
                android:layout_marginStart="20dp"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option D :"
                android:layout_below="@+id/optionC"
                android:layout_margin="8dp"
                android:textColor="#02475e"
                android:textSize="8pt"  />

            <EditText
                android:id="@+id/optionD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView5"
                android:layout_below="@id/optionC"
                android:layout_marginStart="20dp"
                android:gravity="start|top"
                android:inputType="textMultiLine"  />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option E :"
                android:layout_below="@+id/optionD"
                android:layout_margin="8dp"
                android:textColor="#02475e"
                android:textSize="8pt"  />

            <EditText
                android:id="@+id/optionE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView5"
                android:layout_below="@id/optionD"
                android:layout_marginStart="20dp"
                android:gravity="start|top"
                android:inputType="textMultiLine"  />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Right answer:"
                android:textColor="#02475e"
                android:textSize="8pt" />

            <Spinner
                android:id="@+id/rightAnswerspn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_toEndOf="@id/textView7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rightAnswerspn"
                android:padding="4dp"
                android:layout_marginStart="4dp">
                <Button
                    android:id="@+id/addimg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ADD-Image"
                    android:layout_margin="4dp"
                    android:textColor="#687980"
                    android:textSize="5pt"
                     />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/addsound"
                    android:layout_height="wrap_content"
                    android:text="ADD-Sound"
                    android:layout_margin="4dp"
                    android:textColor="#687980"
                    android:textSize="5pt"
                     />

                <Button
                    android:id="@+id/addvid"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ADD-Video"
                    android:layout_margin="4dp"
                    android:textColor="#687980"
                    android:textSize="5pt" />
            </LinearLayout>



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <Button
                android:id="@+id/Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="onSubmit"
                android:text="Submit"
                android:visibility="visible" />

            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="update"
                android:layout_margin="8dp"
                android:visibility="gone" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>

